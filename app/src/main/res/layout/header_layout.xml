<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/right_arrow"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/product_catName"
                style="@style/meadium_txtView"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/search_icon"
                android:layout_toEndOf="@+id/backBtn"
                android:gravity="start"
                android:text=""
                android:maxLines="2"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/cartRL"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/search"
                android:tint="@color/white" />

            <RelativeLayout
                android:id="@+id/cartRL"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/cart"
                    android:tint="@color/white" />
                <TextView
                    android:padding="2dp"
                    android:id="@+id/cartItemNo"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/roundshape_pri"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary" />


            </RelativeLayout>
        </RelativeLayout>

        <View
            android:visibility="gone"
            android:id="@+id/headViewLine"
            android:background="@color/md_grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:elevation="2dp" />

    </LinearLayout>
</layout>
