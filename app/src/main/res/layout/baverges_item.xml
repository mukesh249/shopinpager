<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="">
        
        <variable
            name="homeViewModel"
            type="shoppingpager.wingstud.shopinpager.viewmodel.HomeViewModel" />

    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/anim2" />

            <TextView
                android:visibility="visible"
                android:id="@+id/offTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_offer_shape"
                android:padding="@dimen/_3sdp"
                android:text=" Offer "
                android:textColor="@color/white"
                android:textSize="7sp" />


            <TextView
                android:id="@+id/product_name"
                android:minLines="2"
                android:maxLines="2"
                android:textSize="12sp"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Product item name"
                android:textColor="@color/black" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/rupee1" />

                    <TextView
                        android:id="@+id/priceTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="89"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/rupee1" />

                    <TextView

                        android:id="@+id/priveDisTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="120"
                        android:textColor="@color/md_grey_400" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>